// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

// Necessary for Next auth
model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? @db.Text
    access_token      String? @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model User {
    id              String         @id @default(cuid())
    notificationId  String         @default(cuid())
    createdAt       DateTime       @default(now())
    name            String?
    lastName        String?
    phone           String?
    email           String?        @unique
    emailVerified   DateTime?
    image           String?
    avatar          Image?         @relation("avatar", fields: [avatarId], references: [id])
    avatarId        String?
    registered      DateTime?
    telegramEnabled Boolean?       @default(false)
    whatsappEnabled Boolean?       @default(false)
    role            Role           @default(guest)
    accounts        Account[]
    sessions        Session[]
    orders          Order[]
    excursions      Excursion[]
    photos          Photo[]
    posts           Post[]
    reviews         Review[]
    notifications   Notification[]
    partnership     Partner[]
    images          Image[]        @relation("createdBy")
    imageToken      ImageToken?
}

model Image {
    id                String   @id @default(cuid())
    url               String
    aspectRatio       Float
    title             String?
    createdBy         User?    @relation("createdBy", fields: [createdById], references: [id])
    createdById       String?
    posts             Post[]
    photos            Photo[]
    reviewsWithImage  Review[] @relation("image")
    reviewsWithAvatar Review[] @relation("avatar")
    usersWithAvatar   User[]   @relation("avatar")
}

model ImageToken {
    id      String   @id @default(cuid())
    expires DateTime
    user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId  String   @unique
}

model Post {
    id          String   @id @default(cuid())
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    title       String
    text        String   @db.Text
    srcUrl      String?  @db.Text
    createdBy   User?    @relation(fields: [createdById], references: [id])
    createdById String?
    image       Image?   @relation(fields: [imageId], references: [id])
    imageId     String?
}

model Photo {
    id          String   @id @default(cuid())
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    title       String
    description String?  @db.Text
    category    String?
    image       Image?   @relation(fields: [imageId], references: [id])
    imageId     String?
    createdBy   User?    @relation(fields: [createdById], references: [id])
    createdById String?
}

model Review {
    id          String   @id @default(cuid())
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    text        String   @db.Text
    stars       Int
    checked     Boolean  @default(false)
    image       Image?   @relation("image", fields: [imageId], references: [id])
    imageId     String?
    createdBy   User?    @relation(fields: [createdById], references: [id])
    createdById String?
    name        String?
    avatar      Image?   @relation("avatar", fields: [avatarId], references: [id])
    avatarId    String?
}

model Order {
    id               String           @id @default(cuid())
    createdAt        DateTime         @default(now())
    updatedAt        DateTime         @updatedAt
    name             String
    phoneNumber      String
    groupSize        Int
    dateFrom         DateTime
    dateTo           DateTime
    status           OrderStatus      @default(new)
    comment          String?          @db.Text //User's comment 
    note             String?          @db.Text //Admin's note
    createdBy        User?            @relation(fields: [createdById], references: [id])
    createdById      String?
    excursion        Excursion?       @relation(fields: [excursionId], references: [id])
    excursionId      String?
    excursionGroup   ExcursionGroup?  @relation(fields: [excursionGroupId], references: [id])
    excursionGroupId String?
    excursionStatus  ExcursionStatus?
    partner          Partner?         @relation(fields: [partnerId], references: [id])
    partnerId        String?
    promocode        Promocode?       @relation(fields: [promocodeId], references: [id])
    promocodeId      String?
    notifications    Notification[]   @relation("order")
}

model Excursion {
    id              String           @id @default(cuid())
    createdAt       DateTime         @default(now())
    updatedAt       DateTime         @updatedAt
    current         Boolean          @default(true)
    createdBy       User?            @relation(fields: [createdById], references: [id])
    createdById     String?
    orders          Order[]
    excursionGroups ExcursionGroup[]
    notifications   Notification[]   @relation("excursion")
}

model ExcursionGroup {
    id          String    @id @default(cuid())
    number      Int
    time        DateTime?
    excursion   Excursion @relation(fields: [excursionId], references: [id], onDelete: Cascade)
    excursionId String
    orders      Order[]

    @@unique([number, excursionId])
}

model Notification {
    id          String           @id @default(cuid())
    createdAt   DateTime         @default(now())
    text        String           @db.Text
    forUser     User             @relation(fields: [forUserId], references: [id], onDelete: Cascade)
    forUserId   String
    type        NotificationType @default(text)
    hidden      Boolean          @default(false)
    checked     DateTime?
    firstLoad   DateTime?
    confirmed   DateTime?
    order       Order?           @relation("order", fields: [orderId], references: [id])
    orderId     String?
    excursion   Excursion?       @relation("excursion", fields: [excursionId], references: [id])
    excursionId String?
}

model Partner {
    id          String      @id @default(cuid())
    createdAt   DateTime    @default(now())
    referralId  String      @unique
    name        String
    description String?     @db.Text
    user        User?       @relation(fields: [userId], references: [id])
    userId      String?
    promocodes  Promocode[]
    orders      Order[]
}

model Promocode {
    id        String        @id @default(cuid())
    code      String        @unique
    type      PromocodeType @relation(fields: [typeId], references: [id])
    typeId    String
    valid     Boolean       @default(true)
    partner   Partner       @relation(fields: [partnerId], references: [id])
    partnerId String
    orders    Order[]
}

model PromocodeType {
    id          String      @id @default(cuid())
    type        String      @unique
    description String
    promocodes  Promocode[]
}

enum Role {
    guest
    user
    admin
    root
}

enum OrderStatus {
    new
    registered
    active
    fulfilled
    cancelled
    expired
}

enum ExcursionStatus {
    inqueue
    pending
    accepted
    registered
    rejected
}

enum NotificationType {
    text
    confirmation
}
